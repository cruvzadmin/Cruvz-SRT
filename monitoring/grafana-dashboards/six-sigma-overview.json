{
  "dashboard": {
    "id": null,
    "title": "Cruvz Streaming Six Sigma Quality Dashboard",
    "tags": ["six-sigma", "quality", "cruvz-streaming"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Six Sigma Quality Score",
        "type": "stat",
        "targets": [
          {
            "expr": "(1 - (rate(up[1h]))) * 100",
            "legendFormat": "Availability %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow", 
                  "value": 99.9
                },
                {
                  "color": "green",
                  "value": 99.99966
                }
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Defects Per Million Opportunities",
        "type": "stat", 
        "targets": [
          {
            "expr": "(1 - (rate(up[1h]))) * 1000000",
            "legendFormat": "DPMO"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 3.4
                },
                {
                  "color": "red",
                  "value": 100
                }
              ]
            },
            "unit": "short",
            "max": 1000
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Service Availability",
        "type": "graph",
        "targets": [
          {
            "expr": "up{job=~\"cruvz-streaming.*\"}",
            "legendFormat": "{{ instance }}"
          }
        ],
        "yAxes": [
          {
            "min": 0,
            "max": 1
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Critical Alerts",
        "type": "table",
        "targets": [
          {
            "expr": "ALERTS{severity=\"critical\"}",
            "legendFormat": "Critical Issues"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 5,
        "title": "Resource Utilization",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU %"
          },
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "Memory %"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": []
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "resets(process_start_time_seconds[1h])",
          "iconColor": "rgba(255, 96, 96, 1)",
          "titleFormat": "Deployment"
        }
      ]
    },
    "refresh": "30s",
    "schemaVersion": 30,
    "version": 1,
    "links": []
  }
}